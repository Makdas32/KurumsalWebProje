@model IEnumerable<KurumsalWeb.Models.Model.Kategori>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2><i class="fas fa-list-alt"></i>Kategori İşlemleri</h2>
<hr />
<a href="/Kategori/Ekle" class="btn btn-success"><i class="fas fa-plus-circle"></i> Kategori Ekle</a>
<br />
<br />
<table class="table table-striped table-advance">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.KategoriAdi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Aciklama)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @item.KategoriAdi
    </td>
    <td>@item.Aciklama</td>
    <td>
        <a href="/Kategori/Duzenle/@item.Id" class="btn btn-warning"><i class="far fa-edit"></i> Düzenle</a>
        <a href="/Kategori/Sil/@item.Id" class="btn btn-danger"><i class="fas fa-trash-alt"></i> Sil</a>
    </td>

</tr>
            
    }

</table>
