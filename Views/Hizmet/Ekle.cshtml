
@{
    ViewBag.Title = "Ekle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2><i class="fas fa-map-marked-alt"></i>Hizmet Ekle</h2>
<hr />

<section class="panel">
    <header class="panel-heading">
        Yeni Hizmet Ekle
    </header>
    <div class="panel-body">
        @using (Html.BeginForm("Ekle", "Hizmet", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                <label class="control-label col-md-2">Başlık</label>
                <div class="col-md-10">
                    @Html.TextBox("Baslik",null, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Açıklama</label>
                <div class="col-md-10">
                    @Html.TextArea("Aciklama", new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Resim</label>
                <div class="col-md-10">
                    <input type="file" name="ResimURL" accept=".png,.jpg,.jpeg" class="form-control" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Ekle" class="btn btn-default" />
                </div>
            </div>
        </div>
        }
    </div>
</section>