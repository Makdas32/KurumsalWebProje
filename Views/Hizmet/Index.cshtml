@model IEnumerable<KurumsalWeb.Models.Model.Hizmet>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2><i class="fas fa-concierge-bell"></i> Hizmetlerimiz Ayarları</h2>
<hr />

<a href="/Hizmet/Ekle" class="btn btn-success"><i class="fas fa-plus-circle"></i> Hizmet Ekle</a>
<br /> <br />
<table class="table table-striped table-advance">
    <tr>
        <th>@Html.DisplayNameFor(m => m.ResimURL)</th>
        <th>@Html.DisplayNameFor(m => m.Baslik)</th>
        <th>@Html.DisplayNameFor(m => m.Aciklama)</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td><img src="@item.ResimURL" width="100" /></td>
            <td>@item.Baslik</td>
            <td>@item.Aciklama</td>
            <td>
                <a href="/Hizmet/Duzenle/@item.Id" class="btn btn-warning"><i class="far fa-edit"></i> Düzenle</a>
                <a href="/Hizmet/Sil/@item.Id" class="btn btn-danger"><i class="fas fa-trash-alt"></i> Sil</a>
            </td>
        </tr>
    }
</table>
