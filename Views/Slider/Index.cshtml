@model IEnumerable<KurumsalWeb.Models.Model.Slider>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2><i class="far fa-images"></i> Slider İşlemleri</h2>
<hr />
<a href="/Slider/Ekle" class="btn btn-success"><i class="fas fa-plus-circle"></i> Slider Ekle</a>
<br />
<br>
<table class="table table-striped table-advance">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Resim)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Baslik)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Aciklama)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td width="250">
                <img src="@item.Resim" width="160" />
            </td>
            <td>
                @item.Baslik
            </td>
            <td>
                @item.Aciklama
            </td>
            <td>
                <a class="btn btn-warning" href="/Slider/Duzenle/@item.Id"><i class="far fa-edit"></i> Düzenle</a>
                <a href="/Slider/Sil/@item.Id" class="btn btn-danger"><i class="fas fa-trash-alt"></i> Sil</a>
            </td>
        </tr>


    }

</table>

