@model IEnumerable<KurumsalWeb.Models.Model.Hakkimizda>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2><i class="fas fa-id-card"></i> Site Hakkımızda Ayarları</h2>
<hr />

<table class="table table-striped table-advance">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Aciklama)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.Raw(item.Aciklama)
            </td>
        </tr>
        <tr>
            <td> <a class="btn btn-warning" href="/Hakkimizda/Duzenle/@item.Id"><i class="far fa-edit"></i> Düzenle</a></td>
        </tr>
    }

</table>
